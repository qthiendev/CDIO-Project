    <div class="footer">
      <span class="container-footer1">
        <span class="text-footer"><b>Đóng góp ý kiến tại đây</b></span>
        <span class="input-text">
          <input
            type="feedback"
            name="feedback"
            placeholder="Đóng góp ý kiến tại đây"
            autocomplete="off"
            class="input_feedback"
          />
          <button class="button-footer">Đăng</button>
        </span>
      </span>
    </div>
